[alias]
	fap = fetch --all --prune
	history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	rev = rev-parse --verify HEAD
	rmdel = !git rm $(git ls-files --deleted)
	unstage = reset --mixed HEAD

[branch]
	autosetupmerge = always
	autosetuprebase = always

[push]
	default = simple

[user]
	name = Peter Powell
	email = petpow@saberuk.com
