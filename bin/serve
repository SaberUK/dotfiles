require 'webrick'
if ARGV.size < 1
	puts "Syntax: #{File.basename($PROGRAM_NAME)} <dir>"
	exit 1
else
	server = WEBrick::HTTPServer.new(Address: '0.0.0.0', Port: 9999, DocumentRoot: ARGV[0])
	trap 'INT' do
		server.shutdown
	end
	server.start
end
