#!/usr/bin/env ruby
# SaberUK's Dot Files (C) 2012-2016 Peter "SaberUK" Powell <petpow@saberuk.com>

if ARGV.size < 1
	puts "Syntax: #{File.basename $PROGRAM_NAME} <dir>"
	exit 1
end

require 'webrick'

server = WEBrick::HTTPServer.new Address: '0.0.0.0', Port: 9999, DocumentRoot: ARGV[0]
trap 'INT' do
	server.shutdown
end
server.start
