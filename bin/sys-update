#!/bin/bash
# SaberUK's Dot Files (C) 2012-2019 Peter "SaberUK" Powell <petpow@saberuk.com>

if apt-get --version >/dev/null 2>&1
then
	echo 'Updating APT ...'
	sudo apt-get update &&
	sudo apt-get dist-upgrade --assume-yes &&
	sudo apt-get autoclean --assume-yes &&
	sudo apt-get autoremove --assume-yes
fi

if brew --version >/dev/null 2>&1
then
	echo 'Updating Homebrew ...'
	brew update &&
	brew upgrade
	brew cleanup -s
fi

if gem --version >/dev/null 2>&1
then
	echo 'Updating RubyGems ...'
	export GEM_CMD='gem'
	export GEM_DIR=`gem env gemdir`
	if [ -d $GEM_DIR -a ! -w $GEM_DIR ]
	then
		export GEM_CMD='sudo gem'
	fi
	$GEM_CMD update --system
	$GEM_CMD update &&
	$GEM_CMD cleanup
fi
