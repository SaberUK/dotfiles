#!/bin/bash
# ==============================================================================
# SaberUK's Dot Files <https://github.com/saberuk/dotfiles/>
# ==============================================================================
# Copyright (C) 2012-2014 Peter "SaberUK" Powell <petpow@saberuk.com>
# ==============================================================================

if apt-get --version >/dev/null 2>&1
then
	echo 'Updating APT ...'
	sudo apt-get update &&
	sudo apt-get upgrade &&
	sudo apt-get autoclean &&
	sudo apt-get autoremove
fi

if brew --version >/dev/null 2>&1
then
	echo 'Updating Homebrew ...'
	brew update &&
	brew upgrade &&
	brew cleanup -s
fi

if gem --version >/dev/null 2>&1
then
	echo 'Updating RubyGems ...'
	export GEM_CMD='gem'
	export GEM_DIR=`gem env gemdir`
	if [ -d $GEM_DIR -a ! -w $GEM_DIR ]
	then
		export GEM_CMD='sudo gem'
	fi
	$GEM_CMD update --system
	$GEM_CMD update &&
	$GEM_CMD cleanup
fi
