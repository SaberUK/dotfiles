# ==============================================================================
if ARGV.size < 1
	env = ENV.to_hash.sort
	env.each do |key, value|
		puts "#{key}=#{value}"
	end
else
	exit 1 unless ENV.include?(ARGV[0])
	puts ENV.fetch(ARGV[0])
end
